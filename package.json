{
  "name": "RecipeBox",
  "version": "1.0.0",
  "description": "Organize and maintain your favorite recipes",
  "private": true,
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"cross-env nodemon server.js\" \"npm run client\"",
    "client": "cd client && npm start",
    "install": "cd client && npm install",
    "build": "cd client && npm build",
    "heroku-postbuild": "cd client && npm --production=false && npm build"
  },
  "lint-staged": {
    "**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecorreale/RecipeBox.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ecorreale/RecipeBox/issues"
  },
  "homepage": "https://github.com/ecorreale/RecipeBox#readme",
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "morgan": "^1.10.0"
  }
}
